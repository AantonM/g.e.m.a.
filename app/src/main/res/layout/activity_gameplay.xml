<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cet325.gamers_emotional_state_detection.activities.GameplayActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Game"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEmotionResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="57dp"
        android:text="Emotion Result:" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollResult"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/txtEmotionResult"
        android:layout_marginTop="17dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollResult"
        android:layout_centerHorizontal="true"
        android:text="Stop Emotion Face Recognition" />
</RelativeLayout>
